extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  if(user.permissions.includes("setting-general_view"))
    h1 Cài đặt chung

    +alert-success(5000)
    +alert-error(5000)

    form(
      action=`${prefixAdmin}/settings/general?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="websiteName") Tên website
        input(
          type="text"
          name="websiteName"
          id="websiteName"
          class="form-control"
          value=settingGeneral?settingGeneral.websiteName:""
        )

      div(
        class="form-group"
        upload-image
      )
        label(for="logo") Logo
        input(
            type="file"
            class="form-control-file"
            id="logo"
            name="logo"
            accept="image/*"
            upload-image-input
        )
        img(
            src=settingGeneral?settingGeneral.logo:""
            upload-image-preview
            class="image-preview"
        )
        button(
            delete-image
            class="btn btn-danger"
        ) x

      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          type="text"
          name="phone"
          id="phone"
          class="form-control"
          value=settingGeneral?settingGeneral.phone:""
        )
      
      div(class="form-group") 
        label(for="email") Email 
        input(
          type="text"
          name="email"
          id="email"
          class="form-control"
          value=settingGeneral?settingGeneral.email:""
        )
      
      div(class="form-group")
        label(for="address") Địa chỉ
        input(
          type="text"
          name="address"
          id="address"
          class="form-control"
          value=settingGeneral?settingGeneral.address:""
        )
      
      div(class="form-group") 
        label(for="copyright") CopyRight
        input(
          type="text"
          name="copyright"
          id="copyright"
          class="form-control"
          value=settingGeneral?settingGeneral.copyright:""
        )
      
      if(user.permissions.includes("setting-general_edit"))
        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Cập nhật