extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug

block main
  if(user.permissions.includes("article_view"))
    h1 Danh sách bài viết
    
    +alert-success(5000)

    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body  
        .row
          .col-6
            +filter-status(filterStatus)
                
          .col-6
            +search(keyword)

    .card.mb-3
      .card-header Sắp xếp
      .card-body
        .row
          .col-4
            +sort()

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row 
          if(user.permissions.includes("article_edit"))
            .col-8
              +form-change-multi(`${prefixAdmin}/articles/change-multi?_method=PATCH`)
          
          if(user.permissions.includes("article_create"))
            .col-4
              a(
                href = `${prefixAdmin}/articles/create`
                class = "btn btn-outline-success"
              ) +Thêm mới
        if(articles.length>0)
        
          table(
            class="table table-hover table-sm"
            checkbox-multi
          )
            thead
              tr
                if(user.permissions.includes("article_edit"))
                  th
                      input(type="checkbox" name="checkall")
                th STT
                th Hình ảnh
                th Tiêu đề
                th Mô tả ngắn
                th Trạng thái
                th Người tạo
                th Người sửa
                th Hành động

            tbody
              each item, index in articles
                tr 
                  if(user.permissions.includes("article_edit"))
                    td
                      input(
                        type="checkbox"
                        name="id"
                        value=item.id
                      )
                  td #{pagination.limitItems* ( pagination.currentPage - 1 ) + index + 1}

                  td
                    img(
                      src=item.thumbnail
                      alt=item.title
                      width="100px"
                      height="auto"
                    )

                  td #{item.title}

                  td !{item.description}

                  td
                    if(user.permissions.includes("article_edit"))
                      if(item.status == "active")
                        a(
                          href="javascript:;" 
                          class="badge text-bg-success"
                          data-status=item.status
                          data-id=item.id
                          ) Hoạt động 
                      else
                        a(
                          href="javascript:;" 
                          class="badge text-bg-danger"
                          data-status=item.status
                          data-id=item.id
                          ) Dừng hoạt động
                    else
                      if(item.status == "active")
                        span(
                          class="badge text-bg-success"
                        ) Hoạt động 
                      else 
                        span(
                          class="badge text-bg-danger"
                        ) Dừng hoạt động
                  td 
                    if(item.fullName)
                      p #{item.fullName}
                      +formatDate(item.createdBy.createdAt)

                  td 
                    if(item.updatedBy && item.updatedBy.length > 0)
                      p #{item.updatedBy[item.updatedBy.length - 1].fullName}
                      +formatDate(item.updatedBy[item.updatedBy.length - 1].updatedAt)    
                  td
                    a(
                      class="btn btn-secondary btn-sm"
                      href = `${prefixAdmin}/articles/detail/${item.id}`
                      ) Chi tiết
                    if(user.permissions.includes("article_edit"))
                      a(
                        class="btn btn-warning btn-sm"
                        href = `${prefixAdmin}/articles/edit/${item.id}`
                        ) Sửa
                    if(user.permissions.includes("article_delete"))
                      button(
                        class="btn btn-danger btn-sm ml-1"
                        data-id=item.id 
                        button-delete
                        ) Xóa
          
          +pagination(pagination)
        else  
          h1 Chưa có bài viết nào được thêm vào

    form(
      action=""
      method="POST"
      id='form-change-status'
      path=`${prefixAdmin}/articles/change-status`
    )

    form(
      action=""
      method="POST"
      id='form-delete-item'
      path=`${prefixAdmin}/articles/delete/`
    )
  else
    h1 Bạn không có quyền truy cập trang này

  script(src="/admin/js/product.js") 