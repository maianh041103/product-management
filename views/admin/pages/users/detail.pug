extends ../../layouts/default.pug

block main 
  h1(class="mb-4") Thông tin cá nhân

  if(userAccount.avatar)
    image(
      src=userAccount.avatar
      alt="Ảnh đại diện"
      width="150px"
      class="mb-4"
    )
  else 
    image(
      src=`/images/th.jpg`
      alt="Ảnh đại diện"
      width="150px"
      class="mb-4"
    )

  if(userAccount.fullName)
    p Họ tên: #{userAccount.fullName}

  if(userAccount.email)
    p Email: #{userAccount.email}
  
  if(userAccount.phone)
    p Số điện thoại: #{userAccount.phone}
  
  p 
    span Trạng thái: 
    span
      <b>#{userAccount.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>

  if(user.permissions.includes("user_edit"))
    a(
      href=`${prefixAdmin}/users/edit/${userAccount.id}`
      class="btn btn-primary"
    ) Chỉnh sửa thông tin