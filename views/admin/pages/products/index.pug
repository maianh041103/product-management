extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block main
  if(user.permissions.includes("products_view"))
    h1 Danh sách sản phẩm
    
    +alert-success(5000)

    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body  
        .row
          .col-6
            +filter-status(filterStatus)
                
          .col-6
            +search(keyword)

    .card.mb-3
      .card-header Sắp xếp
      .card-body
        .row
          .col-4
            +sort()

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row 
          if(user.permissions.includes("products_edit"))
            .col-8
              +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
          
          if(user.permissions.includes("products_create"))
            .col-4
              a(
                href = `${prefixAdmin}/products/create`
                class = "btn btn-outline-success"
              ) +Thêm mới
        
        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
          thead
            tr
              if(user.permissions.includes("products_edit"))
                th
                    input(type="checkbox" name="checkall")
              th STT
              th Hình ảnh
              th Tiêu đề
              th Giá
              th Vị trí
              th Trạng thái
              th Hành động

          tbody
            each item, index in products
              tr 
                if(user.permissions.includes("products_edit"))
                  td
                    input(
                      type="checkbox"
                      name="id"
                      value=item.id
                    )
                td #{pagination.limitItems* ( pagination.currentPage - 1 ) + index + 1}

                td
                  img(
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="auto"
                  )

                td #{item.title}

                td #{item.price}$

                td 
                  input(
                      type="number"
                      value=item.position
                      style="width: 60px"
                      min="1"
                      name="position"
                  )
                  
                td
                  if(user.permissions.includes("products_edit"))
                    if(item.status == "active")
                      a(
                        href="javascript:;" 
                        class="badge text-bg-success"
                        data-status=item.status
                        data-id=item.id
                        ) Hoạt động 
                    else
                      a(
                        href="javascript:;" 
                        class="badge text-bg-danger"
                        data-status=item.status
                        data-id=item.id
                        ) Dừng hoạt động
                  else
                    if(item.status == "active")
                      span(
                        class="badge text-bg-success"
                      ) Hoạt động 
                    else 
                      span(
                        class="badge text-bg-danger"
                      ) Dừng hoạt động
                    
                td
                  a(
                    class="btn btn-secondary btn-sm"
                    href = `${prefixAdmin}/products/detail/${item.id}`
                    ) Chi tiết
                  if(user.permissions.includes("products_edit"))
                    a(
                      class="btn btn-warning btn-sm"
                      href = `${prefixAdmin}/products/edit/${item.id}`
                      ) Sửa
                  if(user.permissions.includes("products_delete"))
                    button(
                      class="btn btn-danger btn-sm ml-1"
                      data-id=item.id 
                      button-delete
                      ) Xóa
        
    +pagination(pagination)

    form(
      action=""
      method="POST"
      id='form-change-status'
      path=`${prefixAdmin}/products/change-status`
    )

    form(
      action=""
      method="POST"
      id='form-delete-item'
      path=`${prefixAdmin}/products/delete/`
    )
  else
    h1 Bạn không có quyền truy cập trang này

  script(src="/admin/js/product.js") 