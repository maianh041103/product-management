extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)
  .container.my-5 
    .row.justify-content-center 
      .col-8 
        h1(class="text-center") Lấy lại mật khẩu
        form(
          action="/user/password/forgot"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email:
            input(
              type="email"
              name="email"
              id="email"
              class="form-control"
              required
            )
          div(clas="form-group")
            button(
              class="btn btn-primary btn-block"
              type="submit"
            ) Gửi mail xác nhận