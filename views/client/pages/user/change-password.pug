extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  .container.my-5 
    .row.justify-content-center 
      .col-8 
        h1(class="text-center") Đổi mật khẩu
        form(
          action="/user/info/change-password?_method=PATCH"
          method="POST"
        )
          div(class="form-group")
            label(for="password") Mật khẩu cũ:
            input(
              type="password"
              name="password"
              id="password"
              class="form-control"
              required
            )

          div(class="form-group")
            label(for="newPassword") Mật khẩu mới:
            input(
              type="password"
              name="newPassword"
              id="newPassword"
              class="form-control"
              required
            )
          
          div(class="form-group")
            label(for="reNewPassword") Nhập lại mật khẩu:
            input(
              type="password"
              name="reNewPassword"
              id="reNewPassword"
              class="form-control"
              required
            )

          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận 