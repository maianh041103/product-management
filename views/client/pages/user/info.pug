extends ../../layouts/default.pug

block main 
  h1(class="mb-4") Thông tin cá nhân

  if(user.avatar)
    image(
      src=user.avatar
      alt="Ảnh đại diện"
      width="150px"
      class="mb-4"
    )
  else 
    image(
      src=`/images/th.jpg`
      alt="Ảnh đại diện"
      width="150px"
      class="mb-4"
    )

  if(user.fullName)
    p Họ tên: #{user.fullName}

  if(user.email)
    p Email: #{user.email}
  
  if(user.phone)
    p Số điện thoại: #{user.phone}
  
  p 
    span Trạng thái: 
    span
      <b>#{user.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>

  a(
    href=`/user/info/edit`
    class="btn btn-primary"
  ) Chỉnh sửa thông tin